{
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
           "legacy": true
        }
      ],
      [
        "module-resolver",
        {
          "root": ["./"],
          "alias": {
            "tests": "./tests",
            "myrmidon": "./src",
            "package": "./package.json"
          }
        }
      ],
      ["@babel/plugin-proposal-class-properties",{
        "loose": true
      }],
      "@babel/plugin-proposal-optional-chaining"
    ],
    "ignore": [
      "node_modules"
    ]
  }
  